<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--filter check exist session for sign in-->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>app.servlets.filter.AuthFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/conferences</url-pattern>
        <url-pattern>/user</url-pattern>
        <url-pattern>/speaker</url-pattern>
        <url-pattern>/moder</url-pattern>
        <url-pattern>/admin</url-pattern>
    </filter-mapping>

    <!--filter check exist session for sign in-->
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>app.servlets.filter.AdminFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin</url-pattern>
    </filter-mapping>

    <description>MySQL Test App</description>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/poolName</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!--SignOutServlet-->
    <servlet>
        <servlet-name>SignOutServlet</servlet-name>
        <servlet-class>app.servlets.servlet.SignOutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!--SignUpServlet-->
    <servlet>
        <servlet-name>sign up</servlet-name>
        <servlet-class>app.servlets.servlet.SignUpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sign up</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- SignInServlet -->
    <servlet>
        <servlet-name>sign in</servlet-name>
        <servlet-class>app.servlets.servlet.SignInServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>sign in</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--conferencesServlet-->
    <servlet>
        <servlet-name>conf</servlet-name>
        <servlet-class>app.servlets.servlet.ConferencesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>conf</servlet-name>
        <url-pattern>/conferences</url-pattern>
    </servlet-mapping>


    <!--adminCabinetServlet-->
    <servlet>
        <servlet-name>adminCabinetServlet</servlet-name>
        <servlet-class>app.servlets.servlet.AdminCabinetServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>adminCabinetServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>


